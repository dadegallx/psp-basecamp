# Superset Production Environment Configuration
# Copy this file to .env and fill in the values
# cp .env.example .env

# =============================================================================
# DOMAIN & SSL
# =============================================================================
DOMAIN_NAME=povertystoplight.vetta.so
TLS_EMAIL=your-email@example.com

# =============================================================================
# SECRET KEY (REQUIRED)
# Generate with: openssl rand -base64 42
# =============================================================================
SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND

# Superset version to use (optional, defaults to latest)
# SUPERSET_VERSION=latest

# =============================================================================
# DATABASE CONNECTION (DigitalOcean Managed PostgreSQL)
# Get these values from your DO database dashboard
# =============================================================================
DATABASE_DIALECT=postgresql
DATABASE_USER=doadmin
DATABASE_PASSWORD=YOUR_DATABASE_PASSWORD
DATABASE_HOST=your-db-cluster.db.ondigitalocean.com
DATABASE_PORT=25060
DATABASE_DB=defaultdb

# SSL mode for database (required for DO Managed PostgreSQL)
# Options: disable, allow, prefer, require, verify-ca, verify-full
DATABASE_SSL_MODE=require

# =============================================================================
# REDIS CONFIGURATION (Local Container)
# These defaults work with the docker-compose redis service
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_CELERY_DB=0
REDIS_RESULTS_DB=1

# =============================================================================
# WORKER SETTINGS
# =============================================================================
CELERYD_CONCURRENCY=4

# =============================================================================
# SUPERSET CONFIGURATION
# =============================================================================
SUPERSET_ENV=production
SUPERSET_LOG_LEVEL=INFO

# Load example dashboards (set to 'yes' only for initial testing)
SUPERSET_LOAD_EXAMPLES=no

# =============================================================================
# ADMIN USER (Only used on first initialization)
# After first run, change password via Superset UI
# =============================================================================
ADMIN_USERNAME=admin
ADMIN_FIRSTNAME=Admin
ADMIN_LASTNAME=User
ADMIN_EMAIL=admin@povertystoplight.org
ADMIN_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# =============================================================================
# FLASK CONFIGURATION
# =============================================================================
FLASK_DEBUG=false
CYPRESS_CONFIG=false
