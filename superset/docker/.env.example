# Superset Environment Variables
# Copy this file to .env and customize as needed
# cp .env.example .env

# =============================================================================
# Database Configuration
# Default values work with the docker-compose postgres container
# =============================================================================
DATABASE_DIALECT=postgresql
DATABASE_USER=superset
DATABASE_PASSWORD=superset
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_DB=superset

# =============================================================================
# Redis Configuration
# Default values work with the docker-compose redis container
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_CELERY_DB=0
REDIS_RESULTS_DB=1

# =============================================================================
# Secret Key (REQUIRED for production)
# Generate with: openssl rand -base64 42
# =============================================================================
SECRET_KEY=CHANGE_ME_TO_A_COMPLEX_RANDOM_SECRET

# =============================================================================
# Superset Configuration
# =============================================================================
SUPERSET_LOG_LEVEL=INFO

# Load example dashboards on first run (set to 'no' to skip)
SUPERSET_LOAD_EXAMPLES=yes

# =============================================================================
# Admin User (created on first init)
# =============================================================================
ADMIN_USERNAME=admin
ADMIN_FIRSTNAME=Admin
ADMIN_LASTNAME=User
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin

# =============================================================================
# Flask Configuration
# =============================================================================
FLASK_DEBUG=false
